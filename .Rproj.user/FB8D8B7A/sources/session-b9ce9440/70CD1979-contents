library('tidyverse')

data()
?BOD
# simple line scatter plot
# use 'aes' to map
ggplot(data=BOD, mapping = aes(x = Time,
                               y = demand))+
  geom_point(size=3)+
  geom_line(colour='red')


ggplot(BOD, aes(Time, demand))+
  geom_point()+
  geom_line()

?CO2
CO2
glimpse(CO2)
# Plot concentration levels vs uptake  and color them based on the treatment type 
# scatter - 3d
ggplot(CO2, aes(conc, uptake, colour=Treatment))+
  geom_point()

# Plot model
# regression - 3d
ggplot(CO2, aes(conc, uptake, colour=Treatment))+
  geom_point()+
  geom_smooth(method=lm)

# Plot model for each type of plant
# regression - 4d
ggplot(CO2, aes(conc, uptake, colour=Treatment))+
  geom_point()+
  geom_smooth(method=lm, se=F)+
  facet_wrap(~Type)

# Boxplot with 5d
CO2 %>% ggplot(aes(Treatment, uptake))+
  geom_boxplot()+
  geom_point(alpha=0.5, aes(size=conc, 
                 color=Plant))+
  facet_wrap(~Type)+
  labs(title='chilled Vs Non-chilled')

?mpg
view(mpg)

## simple scatter plot -2d
mpg %>% 
  ggplot( aes(displ, cty, ))+
  labs(x='Engine size (Liters)', y='Economy (miles per gallon)')+
  geom_point()

## simple scatter plot -4d
mpg %>% 
  ggplot( aes(displ, cty, ))+
  labs(x='Engine size (Liters)', y='Economy (miles per gallon)')+
  geom_point(aes(size=trans, colour=drv), alpha=0.5)

## linear model
mpg %>% 
  ggplot( aes(displ, cty, ))+
  labs(x='Engine size (Liters)', y='Economy (miles per gallon)')+
  geom_point(aes(size=trans, colour=drv), alpha=0.5)+
  geom_smooth(method = lm)+
  facet_wrap(~year)
